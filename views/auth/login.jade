extends ../layout

block content
   if (flash.error != false)
      p(class='alert alert-warning')= flash.error
   form(action="/auth/login", method='post')
      div
         label Username:
         input(type="text", name="username")
         
      div
         label Password:
         input(type="password", name="password")
         
      div
         input(type="submit", value="Login")